@model miniStore.ViewModels.Catalog.Products.CategoryAssignRequest
@{
    ViewData["Title"] = "CategoryAssign";
}

<hr />
<div class="row">
    <<div class="card-body">
        <form asp-action="CategoryAssign" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            @for (var i = 0; i < Model.Categories.Count; i++)
            {
                <div class="form-group">
                    <label>
                        @Model.Categories[i].Name
                        <input type="checkbox" asp-for="Categories[i].Selected" />
                        <input type="hidden" asp-for="Categories[i].Id" />
                        <input type="hidden" asp-for="Categories[i].Name" />
                    </label>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Lưu lại" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


